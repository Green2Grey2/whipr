{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Whipr",
  "version": "0.1.0",
  "identifier": "com.whipr.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Whipr",
        "width": 1000,
        "height": 720,
        "minWidth": 360,
        "minHeight": 400,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline';",
      "capabilities": ["main"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "category": "Utility",
    "shortDescription": "Fast, private voice transcription",
    "longDescription": "Whipr is a desktop application for fast, local voice transcription. Press a hotkey, speak, and your words are transcribed and pasted directly into any application. All processing happens on your machine.",
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
